{
  "name": "whatsapp-health-assistant",
  "version": "1.0.0",
  "description": "AI-powered health assistant chatbot for rural Indian communities with multilingual support",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "echo 'Build completed - ready for production'",
    "docker:build": "docker build -t whatsapp-health-assistant .",
    "docker:run": "docker run -p 3000:3000 --env-file .env whatsapp-health-assistant",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "setup": "npm install && echo 'Please configure your .env file with API keys'",
    "postinstall": "echo 'Installation complete! Configure .env and deploy to start helping people!'"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "health",
    "ai",
    "multilingual",
    "rural",
    "india",
    "voice"
  ],
  "author": "Health Assistant Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "multer": "^1.4.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "twilio": "^4.15.0",
    "@supabase/supabase-js": "^2.38.0",
    "@google/generative-ai": "^0.1.3",
    "openai": "^4.8.0",
    "node-cron": "^3.0.2",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.12",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}